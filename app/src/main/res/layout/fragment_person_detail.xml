<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/relative_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_face"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_225"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/dp_5"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:paddingTop="30dp"
            android:id="@+id/text_genre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:layout_toLeftOf="@id/image_face"
            android:text="@string/message_wait"
            android:textColor="@android:color/black"
            android:textSize="@dimen/dp_15" />


        <TextView
            android:id="@+id/text_birthday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:layout_toLeftOf="@id/image_face"
            android:layout_below="@id/text_genre"
            android:text="@string/message_wait"
            android:textColor="@android:color/black"
            android:textSize="@dimen/dp_20" />


        <TextView
            android:id="@+id/text_place_of_birth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_birthday"
            android:layout_margin="@dimen/dp_5"
            android:layout_toLeftOf="@id/image_face"
            android:text="@string/message_wait"
            android:textColor="@android:color/black"
            android:textSize="@dimen/dp_15" />


        <TextView
            android:id="@+id/text_death_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_place_of_birth"
            android:layout_margin="@dimen/dp_5"
            android:layout_toLeftOf="@id/image_face"
            android:text="@string/message_wait"
            android:textColor="@android:color/black"
            android:textSize="@dimen/dp_20" />

    </RelativeLayout>

    <TextView
        android:id="@+id/text_biography"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relative_detail"
        android:layout_margin="@dimen/dp_5"
        android:text="@string/message_wait"
        android:textColor="@android:color/black"
        android:scrollbars = "vertical"
        android:textSize="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_60"/>

</RelativeLayout>